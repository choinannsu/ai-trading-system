# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_trading
REDIS_URL=redis://localhost:6379/0
TIMESCALE_URL=postgresql://user:password@localhost:5432/timescale_db

# API Keys - US Stock Market
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# API Keys - Korean Stock Market
KIWOOM_API_KEY=your_kiwoom_api_key_here
KIWOOM_SECRET_KEY=your_kiwoom_secret_key_here

# API Keys - Cryptocurrency
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# News & Sentiment Analysis
NEWS_API_KEY=your_news_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Web Interface
SECRET_KEY=your_secret_key_for_web_interface
ALGORITHM=HS256

# System Configuration
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
MAX_POSITIONS=10
INITIAL_CAPITAL=120000000  # 1억 2천만원
MONTHLY_INVESTMENT=300000  # 월 30만원

# Risk Management
MAX_RISK_PER_TRADE=0.02  # 2% per trade
MAX_DAILY_LOSS=0.05      # 5% daily loss limit
MAX_DRAWDOWN=0.15        # 15% maximum drawdown

# Trading Configuration
TRADING_MODE=paper  # paper, live
ENABLE_LIVE_TRADING=false
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2023-12-31

# Monitoring & Alerting
SENTRY_DSN=your_sentry_dsn_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ML Model Configuration
MODEL_RETRAIN_FREQUENCY=weekly  # daily, weekly, monthly
PREDICTION_HORIZON=5  # days
FEATURE_ENGINEERING_WINDOW=252  # trading days (1 year)

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1